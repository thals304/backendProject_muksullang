<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.application.muksullang.dao.PostDAO">

	<resultMap type="postMap" id="hashmap">
		<result column="POST_ID" property="postId"/>
		<result column="POST_NM" property="postNm"/>
		<result column="ADMIN_ID" property="adminId"/>
		<result column="TITLE" property="title"/>
		<result column="SORT" property="sort"/>
		<result column="LOCATION" property="location"/>
		<result column="IMAGE" property="image"/>
		<result column="RUNNING_TIME" property="runningTime"/>
		<result column="ENROLL_AT" property="enrollAt"/>
	</resultMap>
	
	<!-- Best Of 전체 게시물 조회(postId(디테일 눌렀을 때 보내기 위함), title, sort, location, image, runningTime만 필요) -->
	<select id="getBestOfList" parameterType="type" resultType="PostDTO">
		SELECT POST_ID,
		       IMAGE,
		       TITLE,
		       SORT,
		       LOCATION,
		       RUNNING_TIME
		FROM   POST
		WHERE  POST_NM = #{type}
	</select>
</mapper>